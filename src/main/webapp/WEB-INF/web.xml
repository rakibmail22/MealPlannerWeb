<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>login.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.LoginController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>home.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.HomeController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.LogoutController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>signup.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.SignUpController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>adminHome.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.AdminHomeController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>createNewBreakfast.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.BreakfastCreateController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>createNewLunch.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.LunchCreateController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteMeal.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.MealDeleteController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>addNewDish.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.DishAddController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>updateWeeklyPlan.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.WeeklyMealUpdateController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>login.do</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home.do</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout.do</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup.do</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminHome.do</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createNewBreakfast.do</servlet-name>
        <url-pattern>/admin/createNewBreakfast</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createNewLunch.do</servlet-name>
        <url-pattern>/admin/createNewLunch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteMeal.do</servlet-name>
        <url-pattern>/admin/deleteMeal</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addNewDish.do</servlet-name>
        <url-pattern>/admin/addNewDish</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>updateWeeklyPlan.do</servlet-name>
        <url-pattern>/admin/updateWeeklyPlan</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>authenticate</filter-name>
        <filter-class>net.therap.mealplanner.filter.AuthenticationFIlter</filter-class>
    </filter>

    <filter>
        <filter-name>authAdmin</filter-name>
        <filter-class>net.therap.mealplanner.filter.AdminAuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticate</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authAdmin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>


</web-app>