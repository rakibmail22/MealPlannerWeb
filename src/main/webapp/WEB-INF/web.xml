<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>helloServlet.do</servlet-name>
        <servlet-class>net.therap.mealplanner.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.LoginController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>home.do</servlet-name>
        <jsp-file>/jsp/home.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>logout.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.LogoutController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>signup.do</servlet-name>
        <servlet-class>net.therap.mealplanner.controller.SignUpController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet.do</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login.do</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home.do</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout.do</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup.do</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticate</filter-name>
        <filter-class>net.therap.mealplanner.filter.AuthenticationFIlter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticate</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>